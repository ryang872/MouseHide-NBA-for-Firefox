{
	"manifest_version": 2,
	"name": "MouseHide NBA",
	"version": "1.0",
  
	"description": "Hides mouse in full screen on NBA.com",
  
	"icons": {
	    "48": "images/icon48.png",
		"96": "images/icon96.png",
		"128": "images/icon128.png"
	},
  
	"content_scripts": [
	  {
		"matches": ["*://*.nba.com/*"],
		"js": ["script.js"]
	  }
	]
}
  